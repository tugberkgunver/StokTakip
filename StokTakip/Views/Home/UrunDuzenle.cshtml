@using StokTakip.Entities
@model StokTakipUrun
@{
    ViewBag.Title = "UrunDuzenle";
}

<h2>UrunDuzenle</h2>

@using (Html.BeginForm())
{
    <form role="form">
        <fieldset>


            <div class="form-group">
                @Html.TextBoxFor(Model => Model.UrunAdi, new { @class = "form-control input-lg", placeholder = "Ürün Adı" })

            </div>
            <div class="form-group">

                @*@Html.DropDownListFor(m => m.SelectedCategoryId, (SelectList)ViewBag.CategoryData, "Lütfen Seçiniz", new { @class = "dropdown form-control" })*@

            </div>
            <div class="form-group">
                @Html.TextBoxFor(Model => Model.AlisFiyat, new { @class = "form-control input-lg", placeholder = "Alış Fiyatı", })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(Model => Model.SatisFiyat, new { @class = "form-control input-lg", placeholder = "Satış Fiyatı", })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(Model => Model.KdvOrani, new { @class = "form-control input-lg", placeholder = "Kdv Oranı", })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(Model => Model.StokMiktari, new { @class = "form-control input-lg", placeholder = "Stok Miktarı", })
            </div>
            <div class="form-group">
                @Html.TextBoxFor(Model => Model.OlcuBirimi, new { @class = "form-control input-lg", placeholder = "Ölçü Birimi", })
            </div>


            <div class="row">
                <div class="col-xs-6 col-sm-6 col-md-6">
                    <input type="submit" class="btn btn-lg btn-success btn-block" value="Kaydet">
                </div>

            </div>
        </fieldset>
    </form>

}